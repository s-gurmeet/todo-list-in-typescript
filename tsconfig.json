{
  "compilerOptions": {
    "target": "ES6", 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext", 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,

    // Additional strict type-checking options
    "strictNullChecks": true, // Prevents null/undefined errors
    "strictFunctionTypes": true, // Ensures correct function typing
    "strictPropertyInitialization": true, // Ensures properties are initialized
    "noImplicitAny": true, // Prevents implicit 'any' types
    "noUnusedLocals": true, // Warns about unused variables
    "noUnusedParameters": true, // Warns about unused function parameters
    "noImplicitReturns": true, // Ensures all code paths return a value
    "noImplicitThis": true // Ensures 'this' is properly used
  },
  "include": [
    "src"
  ]
}
